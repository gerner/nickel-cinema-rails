<h1>New movie</h1>

<% form_for(@movie) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :netflix_ref_url %><br />
    <%= f.text_field :netflix_ref_url %>
  </p>
  <p>
    <%= f.label :netflix_info_url %><br />
    <%= f.text_field :netflix_info_url %>
  </p>
  <p>
    <%= f.label :custom_rating %><br />
    <%= f.text_field :custom_rating %>
  </p>
  <p>
    <%= f.label :generic_rating %><br />
    <%= f.text_field :generic_rating %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', movies_path %>